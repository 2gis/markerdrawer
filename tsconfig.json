{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "tslib": ["./node_modules/tslib/tslib.d.ts"],
      "*": [
        "src/*"
      ]
    },
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}